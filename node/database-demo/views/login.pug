extends layout 
block body
  if(email)
    p Congratulations on signing up ! Please login below.
  form(action="/login", method="POST")
    fieldset 
      legend Log in 
      p 
        label Email 
        input(name="email",value=email,type="text")
      p 
        label Password 
        input(name="password",type="password")
      p 
        button Submit 
      p 
        a(href="/") Go back